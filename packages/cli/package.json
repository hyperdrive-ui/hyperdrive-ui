{
  "name": "@hyperdrive-ui/cli",
  "version": "0.0.1",
  "type": "module",
  "description": "CLI for adding Hyperdrive UI components",
  "author": "Gregoire Stevenard",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hyperdrive-ui": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperdrive-ui/hyperdrive-ui.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/hyperdrive-ui/hyperdrive-ui/issues"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },

   "files": [
    "dist"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "prompts": "^2.4.2",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "node-fetch": "^3.3.2",
    "fs-extra": "^11.2.0",
    "cosmiconfig": "^9.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
